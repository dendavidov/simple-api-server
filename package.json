{
  "name": "simple-api-server",
  "version": "0.0.1",
  "description": "Simple API Server",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "start": "nodemon dist/index.js",
    "dev": "yarn build:dev",
    "build:dev": "webpack --watch --colors --display-error-details --config tools/webpack.js",
    "build": "webpack -p --colors --display-error-details --config tools/webpack.js",
    "lint": "eslint --ext .js src tools",
    "test": "eslint **/*.test.js && jest",
    "test:coverage": "eslint **/*.test.js && jest --coverage",
    "precommit": "lint-staged",
    "prepush": "jest"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "http-status": "^1.0.1",
    "koa": "^2.4.1",
    "koa-cors": "^0.0.16",
    "koa-router": "^7.3.0",
    "log4js": "^2.4.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-jest": "^22.0.4",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.5.0",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "jest-teamcity-reporter": "^0.7.0",
    "lint-staged": "^6.0.0",
    "nodemon": "^1.14.3",
    "prettier": "^1.9.2",
    "supertest": "^3.0.0",
    "webpack": "^3.10.0",
    "webpack-node-externals": "^1.6.0",
    "webpack-shell-plugin": "^0.5.0"
  },
  "jest": {
    "roots": [
      "./src"
    ],
    "testResultsProcessor": "jest-teamcity-reporter"
  },
  "engines": {
    "node": ">= 8.9.0"
  }
}
